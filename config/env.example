# --- App ---
UCA_ENV=dev
UCA_LOG_LEVEL=INFO
UCA_SERVICE_NAME=uca-orchestrator

# --- API ---
UCA_API_HOST=0.0.0.0
UCA_API_PORT=8080

# --- Auth ---
# Demo-only secret. In production use KMS/Vault and rotation; prefer RS256 with JWKS.
UCA_JWT_ALG=HS256
UCA_JWT_ISSUER=uca-orchestrator
UCA_JWT_AUDIENCE=uca-api
UCA_JWT_SECRET=dev-secret-change-me

# --- Persistence ---
# SQLite (dev default) example:
UCA_DATABASE_URL=sqlite+aiosqlite:///./uca.db

# Postgres example:
# UCA_DATABASE_URL=postgresql+asyncpg://uca:uca@localhost:5432/uca

# --- Orchestrator ---
UCA_MAX_REMEDIATION_ATTEMPTS=5

